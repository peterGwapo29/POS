<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane" prefHeight="800.0" prefWidth="1440.0"
    xmlns="http://javafx.com/javafx/24.0.1"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="pos.controller.PosController">

    <stylesheets>
        <URL value="@/pos/css/pos.css" />
    </stylesheets>

    <children>
        <!-- Sidebar Placeholder -->
        <AnchorPane fx:id="sidebarContainer" layoutX="0.0" layoutY="0.0"
                    prefHeight="800.0" prefWidth="250.0" />

        <!-- POS Main Content Background -->
        <Rectangle arcWidth="5.0" fill="#f4f7fa"
                   height="705.0" layoutX="250.0" layoutY="71.0"
                   strokeWidth="0.0" width="1178.0" />

        <!-- Top Header -->
        <HBox alignment="CENTER_LEFT" layoutX="250.0" layoutY="5.0"
            prefHeight="70.0" prefWidth="1190.0" spacing="6.0">
          <children>
              <Label style="-fx-font-family: Poppins;" text="Welcome," />
              <Label fx:id="cashierName" text="Cashier" />
              <Label text="(" />
              <Label fx:id="roleType" text="Role" />
              <Label text=")" />
          </children>
      </HBox>


        <!-- POS Main Content Area -->
        <AnchorPane fx:id="contentArea" layoutX="250.0" layoutY="80.0"
                    prefHeight="700.0" prefWidth="1190.0"
                    style="-fx-background-color: #FAF6F0;" />
    </children>
</AnchorPane>
